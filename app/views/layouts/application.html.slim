              ul.navbar-nav.ml-auto
                li.nav-item
                  = link_to " Myリスト" , lists_path, class: "nav-link fas fa-list"
                li.nav-item
                  = link_to " 設定", "#", class: "nav-link fas fa-cog"

    main
      .container
        = flash[:notice]
        = yield
